<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#00000000"
    >

    <LinearLayout
        android:gravity="right"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/id_textView_out_message"
            android:text=" 你速度"
            android:paddingRight="20dp"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="#f3070808"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chatto_bg_focused" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.makeramen.roundedimageview.RoundedImageView
                app:riv_corner_radius="100dp"
                android:src="@drawable/tim1g"
                android:id="@+id/roundedImageView2"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView

                android:text="我是老大"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:layout_gravity="center"/>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:text="2017-03-04 19:12:30"
        android:id="@+id/id_textView_out_time"
        android:textColor="#0317f2"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />


</LinearLayout>